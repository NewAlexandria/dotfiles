[alias]
  s = status
  co = commit --verbose
	ca = commit --all --verbose
  l = log --pretty=format:'%Cred%h%Creset | %Cgreen%s%Creset [%ar by %an]'
  b = branch
  backup = push --mirror backup
  upstream = log --oneline master..origin/master
  pending = log --oneline origin/master..master

